{% extends 'base.html.twig' %}

{% block content %}
    <form action="/book/create-post/" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" id="title" placeholder="Enter book title">
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" class="form-control" name="author" id="author" placeholder="Enter book author">
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" class="form-control" name="location" id="location" placeholder="Enter book location">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}