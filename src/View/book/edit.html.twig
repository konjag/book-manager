{% extends 'base.html.twig' %}

{% block content %}
    <form action="/book/edit-post/{{ book.id }}" method="post" autocomplete="off">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" id="title" value="{{ book.title }}">
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" class="form-control" name="author" id="author" value="{{ book.author }}">
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" class="form-control" name="location" id="location" value="{{ book.location }}">
        </div>
        <div class="mt-5">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/" class="btn btn-warning">Cancel</a>
        </div>
    </form>
{% endblock %}
